<div class="container-fluid">

    <h1 class="text-center">AHCH Information Management System</h1>

    <div class="row">
        {{!-- Case List Preview --}}
        <div class="col-lg-6 offset-0">
            <div class="table-responsive">
                <table class="table table-hover" id="table-case-list">
                    <thead>
                        <tr>
                            <th scope="col">Family Name</th>
                            <th scope="col">NJ Spirit #</th>
                            <th scope="col">Date Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each patients}}
                            {{#if this.name}}
                                <td scope="row">{{this.name}}</td>
                            {{else}}
                                <td scope="row">N/A</td>
                            {{/if}}
                            {{#if this.spiritNum}}
                                <td scope="row">{{this.spiritNum}}</td>
                            {{else}}
                                <td scope="row">N/A</td>
                            {{/if}}
                            {{#if this.dateCreated}}
                                <td scope="row">{{this.dateCreated}}</td>
                            {{else}}
                                <td scope="row">N/A</td>
                            {{/if}}
                        {{/each}}
                        <tr> <!-- REMOVE LATER -->
                            <td scope="row">Smith</td>
