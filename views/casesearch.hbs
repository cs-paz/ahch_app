<div class="wrapper">
    <div class="page-content-wrapper">
        <div class="container">
            <div class="row">
                <form>
                    <label for="input-search-val" class="control label col-form-label-sm">
                        Search By:</label> <input type="text" class="form-control mb-2"
                        id="input-search-val" name="search" autocomplete="off" placeholder="Enter Name or KC Number">
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline  form-control-sm">
                            <input class="form-check-input" type="radio" id="input-name" value="name"
                                name="searchBy">
                            <label class="form-check-label" for="input-name">Name</label>
                        </div>
                        <div class="form-check form-check-inline  form-control-sm">
                            <input class="form-check-input" type="radio" id="input-kc" value="kc"
                                name="searchBy">
                            <label class="form-check-label" for="input-kc">KC Number</label>
                        </div>
                    </div>
                    <button type="submit">Search</button>
                </form>
            </div>
            {{!-- {{#each cases}}
            <div class="row">
                
            </div>
            {{/each}} --}}
            {{#if searched}}
                {{#if cases}}
                <table>
                    <thead>
                        <tr>
                            <th scope="col">Family Name</th>
                            <th scope="col">NJ Spirit #</th>
                            <th scope="col">Date Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cases}}
                        <tr>
                            <td scope="row"><a href="/cases/{{this._id}}/caseinfo">{{this.caseName}}</a></td>
                            {{#if this.spiritNumber}}
                            <td>{{this.spiritNumber}}</td>
                            {{else}}
                            <td>N/A</td>
                            {{/if}}
                            {{#if this.createdDate}}
                            <td>{{this.createdDate}}</td>
                            {{else}}
                            <td>N/A</td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="row">
                    <p>No cases could be found from the search.</p>
                </div>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>